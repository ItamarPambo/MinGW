// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  name String
  email String @unique
  password String
  role Role[]

  @@map("user")
}

model Role {
  id String @id @default(uuid())
  name String @unique
  user User[]
  permitions Permition[]

  @@map("role")
}

model Permition {
  id String @id @default(uuid())
  name String @unique
  roles Role[] 

  @@map("permitions")
}