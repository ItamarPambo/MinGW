// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  name String
  email String @unique
  password String
  userRoles UserRoles[]

  @@map("user")
}

model Role {
  id String @id @default(uuid())
  name String @unique
  rolePermitions RolePermitons[]
  userRoles UserRoles[]

  @@map("role")
}

model Permition {
  id String @id @default(uuid())
  name String @unique
  rolePermitions RolePermitons[]

  @@map("permitions")
}

model RolePermitons {
  role_id String
  role Role @relation(fields: [role_id], references: [id])
  permition_id String
  permition Permition @relation(fields: [permition_id], references: [id])

  @@id([role_id, permition_id])
  @@map("rolePermitions")
}

model UserRoles {
  user_id String
  user User @relation(fields: [user_id], references: [id])
  role_id String
  role Role @relation(fields: [role_id], references: [id])

  @@id([user_id, role_id])
  @@map("userRoles")
}